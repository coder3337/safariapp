extends layout

block content
  h1.display-2.text-success.text-center= title
  div.row.justify-content-center
    div.row-auto
      h3.text-center Take a look at what we rounded up in your search area..  
  div.container.bg-white.rounded
    div.row
      div.col-2
        p.font-weight-bold We love finding you the best Safaris!
        p You searched for:
          span= cityCode
          span= checkInDate
          span= checkOutDate
        p= count 
      div.col-10
        each results in list
          div.result.p-3.mb-2.bg-light.text-align-left.small
            h3.font-weight-bold= results.hotel.name
            p= results.available
            p= results.hotel.type
            p= results.hotel.rating
            p= results.hotel.description
            p= results.hotel.offers
            each val, index in results.hotel.media
              div= index
              - var url = results.hotel.media.uri;
              img.thumbnail.float-right.img-thumbnail.ml-5(src='' + url alt='cf' width='200px' height='auto')
            //-b
              span.mr-3= results.hotel.latitude
            //-b
              span= results.hotel.longitude